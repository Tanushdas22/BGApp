<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@android:color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <!-- Doctor's Information Section -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/tv_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Jane Smith"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="#B00020" />

                <TextView
                        android:id="@+id/tv_doctor_specialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardiologist"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                <TextView
                        android:id="@+id/tv_doctor_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Office: 456 Health Blvd, City, State"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Average Blood Pressure Section -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/tv_avg_blood_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average Blood Pressure (Last 14 Days): 120/80 mmHg"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Average Heart Rate Section -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/tv_avg_heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average Heart Rate (Last 14 Days): 75 bpm"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Average Oxygen Saturation Section -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/tv_avg_oxygen_saturation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average Oxygen Saturation (Last 14 Days): 98%"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Average Cholesterol Level Section -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/tv_avg_cholesterol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average Cholesterol Level (Last 14 Days): 180 mg/dL"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/tv_upcoming_appointments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Appointment: June 15, 2024, at 2:00 PM"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                <TextView
                        android:id="@+id/tv_doctor_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doctor's Notes: Maintain your low-sodium diet and stay hydrated."
                        android:layout_marginTop="8dp"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>