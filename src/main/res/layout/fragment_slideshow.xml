<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@android:color/white"
        tools:context=".ui.slideshow.SlideshowFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <!-- Patient's Basic Information Section -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/tv_patient_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: Admin"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="#B00020" />

                <TextView
                        android:id="@+id/tv_patient_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: 45"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Medical Information Section -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/tv_medical_conditions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medical Conditions: Hypertension, High Cholesterol"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                <TextView
                        android:id="@+id/tv_current_medications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Medications: Lisinopril, Atorvastatin"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                <TextView
                        android:id="@+id/tv_allergies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allergies: Penicillin"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recent Health Data Section -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/tv_recent_blood_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Blood Pressure: 130/85 mmHg"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                <TextView
                        android:id="@+id/tv_recent_heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Heart Rate: 78 bpm"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                <TextView
                        android:id="@+id/tv_recent_oxygen_saturation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Oxygen Saturation: 97%"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>